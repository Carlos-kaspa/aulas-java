import java.util.Random; 


public class Conta {
	
	private int agencia = setAgencia();
	private int conta = setConta();
	private double saldo;
	private String titular;
	
	//Getters
	public int getAgencia() {
		return this.agencia;
	}
	
	public int getConta() {
		return this.conta;
	}
	
	public double getSaldo() {
		return this.saldo;
	}
	
	public String getTitular() {
		return this.titular;
	}
	
	//Setters
	
	public int setAgencia() {
		return this.agencia = new Random.nextInt(100);
	}
	
	public long setConta() {
		int conta = new Random.nextInt(10000);
		this.conta = conta;
		return this.conta;
	}
	
	
	//Actions
	
	public double deposita(double valor , Conta destino) {
		destino.saldo += valor;
	}
	
	public boolean saca(double valor) {
		if(this.saldo >= valor) {
			this.saldo -= valor;
			return true;
		} else {
			return false;
		}
	}
	
	public double transfere(double valor, Conta destino) {
		this.saca(valor);
		destino.deposita(valor);
	}
	

}
