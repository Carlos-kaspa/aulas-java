			break;
			
		case 'M':
			return System.out.println("Sr. " + conta1.titular.nome + ", seu saldo é de: " + conta1.saldo);
			break;
			
		case 'F':
			return System.out.println("Srª " + conta1.titular.nome + ", seu novo saldo é de: " + conta1.saldo);
			break;
		default:
			return System.out.println("Seu saldo é de: " + conta1.saldo);
			break;
		}	
		
