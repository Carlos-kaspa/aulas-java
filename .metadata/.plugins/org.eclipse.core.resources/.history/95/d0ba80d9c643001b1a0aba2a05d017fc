package bytebank;

public class ExercicioMinhaConta {

	public static void main(String[] args) {
		
		Cliente cliente1 = new Cliente();
		
		cliente1.nome = "Carlos Augusto Gomes de Lima";
		cliente1.sexo = 'H';
		cliente1.profissao = "Desenvolvedor";
		cliente1.endereco = "Dr. Guedes Coelho, 78 AP 81";
		cliente1.telefone = 13991115656;
		cliente1.estadoCivil = "Namorando a ruivinha";
				
		Conta conta1 = new Conta();
		
		conta1.titular = cliente1;
		conta1.agencia = 12;
		conta1.numero = 12345;
		
		conta1.deposita(1000);
		
		switch(conta1.titular.sexo) {
		
			case 'H':
				System.out.println(conta1.titular.nome + ", já que o Sr se identifica sexualmente como um helicóptero apache de ataque, possui o saldo de: " + conta1.saldo);
				break;
				
			case 'M':
				System.out.println("Sr. " + conta1.titular.nome + ", seu saldo é de: " + conta1.saldo);
				break;
				
			case 'F':
				System.out.println("Srª " + conta1.titular.nome + ", seu novo saldo é de: " + conta1.saldo);
				
			default:
				System.out.println("Seu saldo é de: " + conta1.saldo);
		}	
		
		System.out.println("----------------------------");
		
		Conta contaMonique = new Conta();
		
		contaMonique.titular = "Monique Guimarães";
		contaMonique.saldo = 10423;
		contaMonique.agencia = 21;
		contaMonique.numero = 54321;
		
		System.out.println("Olá, Srª " + contaMonique.titular);
		System.out.println("O saldo da sua conta " + contaMonique.numero + "-" + contaMonique.agencia);
		System.out.println("é de " + contaMonique.saldo);
		
		System.out.println("--------------------");
		System.out.println(" * escolhi transferir dinheiro pra ruivinha * ");
		
		if(minhaConta.transfere(200, contaMonique)) {
			
			System.out.println("transferencia efetuada");
		} else {
			System.out.println("saldo insuficiente");
		};
		
		System.out.println(minhaConta.titular + " seu saldo agora é de " + minhaConta.consultaSaldo());
		
		System.out.println("-----------------");
		
		System.out.println("* ruivinha vai me pagar pelo programa *");
		
		contaMonique.transfere(100, minhaConta);
		
		System.out.println("* ruivinha quer sacar 300 pra pagar os lanche de antes, serviço completo. *");
		
		contaMonique.saca(300);
		
		System.out.println(contaMonique.titular + " seu saldo agora é de " + contaMonique.consultaSaldo());
		

	}
}
